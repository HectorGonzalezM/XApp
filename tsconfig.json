{
  "compilerOptions": {
    "target": "ES2015", // Specifies the output language level
    "lib": ["dom", "dom.iterable", "esnext"], // Include necessary libraries
    "allowJs": true, // Allow JavaScript files to be compiled
    "skipLibCheck": true, // Skip type checking of declaration files
    "strict": true, // Enable all strict type-checking options
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing in file names
    "noEmit": true, // Do not emit outputs
    "esModuleInterop": true, // Enable interoperability between CommonJS and ES Modules
    "module": "esnext", // Specify module code generation
    "moduleResolution": "node", // Resolve modules using Node.js resolution
    "resolveJsonModule": true, // Allow importing JSON modules
    "isolatedModules": true, // Ensure each file is treated as a separate module
    "jsx": "preserve", // Preserve JSX syntax for further processing
    "incremental": true, // Enable incremental compilation
    "allowSyntheticDefaultImports": true // Allow default imports from modules with no default export
    // Removed duplicate 'moduleResolution' and unnecessary 'plugins' and 'paths'
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts" // Ensure this is included if necessary
  ],
  "exclude": ["node_modules"] // Exclude node_modules from compilation
}
